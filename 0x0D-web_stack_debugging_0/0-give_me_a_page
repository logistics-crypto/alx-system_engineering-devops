# Use the official Apache image as a base image
FROM ubuntu:18.04

# Install Apache
RUN apt-get update && \
    apt-get install -y apache2

# Replace the default index.html with a custom one containing "Hello Holberton"
RUN echo "Hello Holberton" > /var/www/html/index.html

# Expose port 80
EXPOSE 80

# Start Apache in the foreground
CMD ["apache2ctl", "-D", "FOREGROUND"]